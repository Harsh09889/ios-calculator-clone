import { useState } from 'react';
import './style.css'

function App() {
  const [prevOperand,setPrevOperand] = useState(0)
  const [currOperand,setcurrOperand] = useState(0)
  const [operation,setoperation] = useState('')

  function digitPressed() {
    setcurrOperand((currOperand) => {
        let str = currOperand 
        return str
    })
  }

  return (

    <div className="calculator-grid">
      <div className='output'>
        {prevOperand && <div className='prev-operand'>{prevOperand} {operation}</div>}
        <div className='curr-operand'>{currOperand}</div>
      </div>
      <button  className='span-two'>AC</button>
      <button className=''>%</button>
      <button className='operation'>&divide;</button>
      <button  onClick={digitPressed} className='digit'>7</button>
      <button   className='digit'>8</button>
      <button   className='digit'>9</button>
      <button className='operation'>X</button>
      <button   className='digit'>4</button>
      <button   className='digit'>5</button>
      <button   className='digit'>6</button>
      <button className='operation'>-</button>
      <button   className='digit'>1</button>
      <button   className='digit'>2</button>
      <button   className='digit'>3</button>
      <button className='operation'>+</button>
      <button   className='digit'>0</button>
      <button className='digit'>.</button>
      <button className='span-two equals operation'>=</button>
      
    
    </div>
  );
}

export default App;
